{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"lib": ["dom", "es2018"],
		"types": ["node"],
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types"],
		"allowJs": true
	},
	"compileOnSave": true,
	"include": ["server.ts"]
}
