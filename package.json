{
	"name": "restaurants",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@types/jest": "24.0.18",
		"@types/node": "12.7.2",
		"@types/react": "16.9.2",
		"@types/react-dom": "16.9.0",
		"apollo-boost": "^0.4.4",
		"dotenv": "^8.1.0",
		"graphql": "^14.5.4",
		"react": "^16.9.0",
		"react-apollo": "^3.0.1",
		"react-dom": "^16.9.0",
		"react-scripts": "3.1.1",
		"typescript": "3.6.2"
	},
	"scripts": {
		"schema:download": "apollo schema:download graphql-schema.json",
		"codegen:generate": "apollo codegen:generate --localSchemaFile=graphql-schema.json --target=typescript --includes=src/**/*.ts --tagName=gql",
		"prestart": "yarn schema:download",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "tslint -c tslint.json \"src/**/*.ts\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"check-format": "prettier --check \"src/**/*.ts\""
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "always",
		"endOfLine": "lf"
	},
	"devDependencies": {
		"apollo": "^2.18.0",
		"prettier": "1.18.2",
		"tslint": "^5.19.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-eslint-rules": "^5.4.0",
		"tslint-react": "^4.0.0"
	}
}
